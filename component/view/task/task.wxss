/* component/view/task/task.wxss */
.task-list {
    width: 95%;
    margin: 30rpx auto;
    display: flex;
    flex-wrap: wrap;
    position: relative;
}

.task-list::before {
    content: "";
    position: absolute;
    top: 0;
    right: 50%;
    width: 1rpx;
    height: 100%;
    background-color: #8799a3;
}

.task-list::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 1rpx;
    background-color: #8799a3;
}

.task-item {
    width: 50%;
    margin: 20rpx auto;
    text-align: center;
}

.progress {
    text-align: center;
    display: flex;
    justify-content: center;
}

.task-title {
    font-size: 32rpx;
    margin-top: 10rpx;
}

.all {
    font-size: 28rpx;
    text-align: center;
    margin: 10rpx auto;
}
