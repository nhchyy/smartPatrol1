/* component/view/home/home.wxss */

.head {
    width: 100%;
    height: 362rpx;
    background-color: #335fda;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.head-item {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    border: solid 2rpx #fff;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.head-box {
    width: 100%;
    height: 160rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
}

.item {
    width: 100%;
    font-size: 24rpx;
    text-align: center;
    letter-spacing: 1rpx;
    color: #fff;
}

.number {
    font-size: 30rpx;
    letter-spacing: 2rpx;
    color: #fff;
}

.btn {
    width: 72rpx;
    line-height: 1.5;
    margin: 0 auto;
    border-radius: 10px;
    border: solid 1px #fff;
    margin-top: 10rpx;
}

.ad {
    width: 750rpx;
    height: 449rpx;
}

.ad image {
    width: 100%;
    height: 100%;
}

/* welcome */

.welcome {
    display: flex;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    padding-left: 23rpx;
    margin-top: 40rpx;
}

.welcome-left {
    width: auto;
}

.welcome-img {
    width: 145rpx;
    height: 145rpx;
    background-color: #f6f6f6;
}

.welcome-img image {
    width: 100%;
    height: 100%;
}

.welcome-text {
    text-align: center;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #000;
}

.welcome-right {
    position: relative;
    margin-left: 40rpx;
}

.right-box {
    width: 520rpx;
    max-height: 124rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #000;
    padding: 22rpx 65rpx;
    background-color: #c9c7c7;
}

.right-text {
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.welcome-right::after {
    content: " ";
    position: absolute;
    top: 10rpx;
    left: -50rpx;
    border: 20rpx solid transparent;
    border-right: 20rpx solid #c9c7c7;
    width: 10rpx;
    height: 0rpx;
}
