/* pages/plan/history/details/index.wxss */
.box {
    width: 95%;
    margin: 0 auto;
    border-radius: 8rpx;
    overflow: hidden;
    background-color: #ffffff;
    box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.2);
    margin-top: 20rpx;
}

.title {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
    background-color: #dedede;
    padding: 15rpx 0;
}

.photograph {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
}

.take_photo {
    width: 200rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8rpx;
    overflow: hidden;
    background-color: #ffffff;
    box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.2);
    margin: 10rpx auto;
    position: relative;
}

.take_photo image {
    width: 200rpx;
    height: 200rpx;
    z-index: 1;
}

.record {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}

.play-record {
    width: 100%;
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
    margin: 10rpx auto;
}

.video {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.video-play {
    margin: 10rpx auto;
}

.desc {
    width: 100%;
    font-size: 26rpx;
    text-align: left;
}

.no-data {
    width: 100%;
    font-size: 26rpx;
    text-align: center;
}
