/* pages/plan/calendar/index.wxss */
page {
    background-color: #f6f6f6;
}

.calendar {
    width: 95%;
    margin: 20rpx auto;
    background-color: #ffffff;
    box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.2);
    border-radius: 8rpx;
    padding: 20rpx 0;
}

.bar {
    width: 95%;
    margin: 0 auto;
    border-radius: 8rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    display: flex;
    justify-items: center;
    justify-content: space-around;
    background-color: #ffffff;
    box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.2);
}

.tips {
    width: calc(100% / 3);
    display: flex;
    justify-items: center;
    justify-content: center;
    padding: 25rpx 20rpx;
}

.tips:nth-child(2) {
    border: 1rpx solid rgba(0, 0, 0, 0.05);
    border-top: none;
    border-bottom: none;
}

.text {
    width: 40%;
    font-size: 26rpx;
    font-weight: 500;
}

.num {
    width: 30%;
    font-size: 24rpx;
    color: #ffffff;
    text-align: center;
    border-radius: 8rpx;
    padding: 5rpx;
}
