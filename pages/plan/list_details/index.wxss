/* pages/plan/list_details/index.wxss */
page {
    background-color: #f6f6f6;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding-top: 30rpx;
}

.head {
    width: 90%;
    margin: 0 auto;
    padding: 20rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
    background-color: #ffffff;
    box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.37);
}

.title {
    font-size: 35rpx;
    text-align: center;
    font-weight: bold;
    line-height: 2;
}

.info {
    display: flex;
    align-items: center;
}

.time {
    width: 50%;
    text-align: center;
}

.hour {
    font-size: 35rpx;
    font-weight: 600;
}

.day {
    font-size: 30rpx;
    font-weight: 600;
}

.infos {
    width: 50%;
}

.info-text {
    font-size: 26rpx;
    line-height: 1.5;
}

.plan {
    width: 90%;
    margin: 30rpx auto;
    box-sizing: border-box;
    padding: 5rpx 20rpx;
    border-radius: 8rpx;
    background-color: #ffffff;
    margin-bottom: 150rpx;
    box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.37);
}

.plan-list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx 0;
}

.plan-name {
    font-size: 32rpx;
}

.nodata {
    font-size: 30rpx;
    text-align: center;
    padding: 10rpx 0;
}

.scan {
    position: fixed;
    bottom: 50rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 100rpx;
    height: 100rpx;
    background-color: #ffffff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.37);
}

.van-cell{
    align-items: center;
}
.scan-icon {
    display: block !important;
}

.list-icon{
    margin-right: 20rpx;
    display: inherit !important;
}