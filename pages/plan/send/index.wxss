/* pages/plan/send/index.wxss */
page {
    background-color: #f6f6f6;
    padding-bottom: 30rpx;
}

.popup {
    box-sizing: border-box;
    padding: 20rpx;
    text-align: center;
}

.popup-text {
    font-size: 26rpx;
    font-weight: bold;
    line-height: 2;
}

.popup-btn {
    margin-top: 20rpx;
}

.status {
    width: 95%;
    margin: 0 auto;
}

.box {
    width: 95%;
    margin: 0 auto;
    border-radius: 8rpx;
    overflow: hidden;
    background-color: #ffffff;
    box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.2);
    margin-top: 20rpx;
}

.title {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
    background-color: #dedede;
    padding: 15rpx 0;
}

.photograph {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
}

.take_photo {
    width: 200rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8rpx;
    background-color: #ffffff;
    box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.2);
    margin: 10rpx auto;
    position: relative;
}

.delete-img {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 3;
}

.take_photo image {
    width: 200rpx;
    height: 200rpx;
    z-index: 1;
}

.record {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}

.play-record {
    width: 100%;
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
    margin: 10rpx auto;
}

.video {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.video-play {
    margin: 10rpx auto;
}

.remove-record,
.remove-video {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn {
    width: 70%;
    margin: 30rpx auto;
    font-size: 30rpx;
    line-height: 2.8;
    text-align: center;
    background-color: #335fda;
    color: #fff;
    border-radius: 8rpx;
}

.placeholder {
    font-size: 26rpx;
    line-height: 1.5;
}

.content {
    font-size: 26rpx;
}

.textarea {
    width: 100% !important;
    font-size: 26rpx;
    min-height: 120rpx;
    line-height: 1.3;
}

.plan_item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 15rpx;
}

.item_name {
    font-size: 30rpx;
}

.group {
    display: flex;
}

.plan_item van-radio-group {
    display: flex;
}

.plan_item .van-radio__label {
    margin-left: 10rpx;
    font-size: 26rpx;
}

.plan_item .van-radio:last-child {
    margin-left: 20rpx;
}
